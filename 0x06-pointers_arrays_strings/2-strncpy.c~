#include "main.h"

/**
 *_strncpy - function that copies a string
 *@dest: destination string
 *@src: source string
 *@n:The maximum number of bytes to concaenate from src
 *Return: dest;
 */
char *_strncpy(char *dest, char *src, int n)
{
int i;

for (i = 0; i < 0 && src[i] != '\0' ; i++)
{
dest[i] = src[i];
}
for (;i < n; i++)
{
dest[i] = '\0';
}
return (dest);
}
